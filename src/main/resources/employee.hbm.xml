<?xml version="1.0"?> <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> <hibernate-mapping>
    <class name="test.hibernate.entities.UserEntity" table="sbns_user" >
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <property name="name" type="string">
            <column name="name" length="50" />
        </property>
        <component name="proteinEntity">
            <property name="goal" type="java.lang.Integer">
                <column name="goal" length="50"/>
            </property>
            <property name="total" type="java.lang.Integer">
                <column name="total" length="50"/>
            </property>
        </component>

    </class>
</hibernate-mapping>